<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign pres = data[1] | sort: 'year' | reverse %}
  {% for content in pres %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-2 col-sm-2 col-md-2 text-center date-column">
          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">{{ content.year }}</span>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="col-xs-10 col-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">{{ content.title }}</h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">{{ content.event }} â€” {{ content.location }}</h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic">{{ content.type }}</h6>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
