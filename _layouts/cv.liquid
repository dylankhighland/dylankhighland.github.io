---
layout: default
---
{% if page.use_json_resume or site.data.resume %}
  <!-- JSON Resume Path (Preferred) -->
  <div class="post">
    <header class="post-header">
      <h1 class="post-title">
        {{ page.title }}
        {% if page.cv_pdf %}
          <a
            {% if page.cv_pdf contains '://' %}
              href="{{ page.cv_pdf }}"
            {% else %}
              href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}"
            {% endif %}
            target="_blank"
            rel="noopener noreferrer"
            class="float-right"
          >
            <i class="fa-solid fa-file-pdf"></i>
          </a>
        {% endif %}
      </h1>
      {% if page.description %}
        <p class="post-description">{{ page.description }}</p>
      {% endif %}
    </header>

    <article>
      <div class="cv">
        {% for data in site.data.resume %}
          {% if site.jsonresume and site.jsonresume.size > 0 %}
            {% unless site.jsonresume contains data[0] %}
              {% continue %}
            {% endunless %}
          {% endif %}
          {% if data[0] == 'meta' or data[1].size == 0 %} {% continue %} {% endif %}
          <a class="anchor" id="{{ data[0] }}"></a>
          <div class="card mt-3 p-3">
              {% assign custom_title = site.jsonresume_titles[data[0]] %}
              {% if custom_title %}
                {% assign section_title = custom_title %}
              {% else %}
            {% case data[0] %}
              {% when 'research_experience' %}
                {% assign section_title = 'Research Experience' %}
              {% when 'manuscripts_in_prep_or_review' %}
                {% assign section_title = 'Manuscripts in Prep or Review' %}
              {% when 'professional_memberships' %}
                {% assign section_title = 'Professional Memberships' %}
              {% when 'field_expeditions' %}
                {% assign section_title = 'Field Expeditions' %}
              {% when 'volunteer_experience' %}
                {% assign section_title = 'Volunteer Experience' %}
              {% else %}
                {% assign section_title = data[0] | capitalize %}
            {% endcase %}
              {% endif %}
            <h3 class="card-title font-weight-medium">{{ section_title }}</h3>
            <div>
              {% case data[0] %}
                {% when 'basics' %}
                  {% include resume/basics.liquid %}
                {% when 'contact_information' %}
                  {% include resume/basics.liquid %}
                {% when 'education' %}
